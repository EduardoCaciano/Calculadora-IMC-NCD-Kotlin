<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity">

    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center"
            android:text="Health Calc"
            android:textSize="37dp"
            android:textColor="#FFFFFF"/>

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ncd"/>

    </RelativeLayout>

    <View
        android:id="@+id/imagem_ondas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ic_wave"
        android:layout_below="@+id/linear" />

    <TextView
        android:id="@+id/tv_mensagem_erro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagem_ondas"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/login_senha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_mensagem_erro">

        <TextView
            android:id="@+id/nome_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Login"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_faca_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/nome_login"
            android:text="FaÃ§a login para continuar"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:layout_marginTop="95dp"
            android:layout_below="@+id/view_faca_login"
            android:hint="Email"
            android:background="@drawable/edit_text_background_login"
            android:inputType="textEmailAddress"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawableTint="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/senha"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:hint="Senha"
            android:layout_below="@+id/email"
            android:background="@drawable/edit_text_background_login"
            android:inputType="textPassword"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/cadeado"
            android:drawableTint="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/login"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/senha"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_backgroud_login"
            android:layout_marginTop="20dp"
            android:text="Login"/>

        <CheckBox
            android:id="@+id/button_lembrar_senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lembrar minha senha"
            android:layout_below="@+id/login"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="16dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_esqueceu_senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esqueceu a senha?"
            android:layout_below="@id/button_lembrar_senha"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            android:textColor="@android:color/holo_blue_dark"/>

        <TextView
            android:id="@+id/tv_novo_aqui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo por aqui?"
            android:layout_below="@id/tv_esqueceu_senha"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@id/tv_crie_sua_conta"
            android:textColor="@android:color/tab_indicator_text"/>

        <TextView
            android:id="@+id/tv_crie_sua_conta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criar uma conta agora"
            android:layout_below="@+id/tv_esqueceu_senha"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/holo_blue_dark"/>
    </RelativeLayout>

    <View
        android:id="@+id/imagem_ondas_final"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_wave_final"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desenvolvido por D2M-A"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:textColor="#FFFFFF"/>

</RelativeLayout>


